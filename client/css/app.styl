@keyframes pulse
   0%
     -webkit-transform scale(1.0)
   50%
     -webkit-transform scale(1.25)
   100%
     -webkit-transform scale(1.0)

.center
  text-align center

.border
  solid 1px red

.right
  text-align right

// Homepage

body
  background url('/images/black_linen_v2.png')
  color white

.navbar-inner
  background rgba(20,20,20,0.9)
  box-shadow none

a.brand
  font-family 'Helvetica Neue'
  font-size 2em
  font-weight 100 !important
  text-shadow 2px 2px 2px black
  color white
  letter-spacing 2px
  text-transform uppercase

a.brand div
  float left
  margin 6px 13px
  width 10px
  height 10px
  border-radius 10px
  vertical-gradient(#61CF2E, #45991F)
  box-shadow 0px 0px 3px #43EE00
  -webkit-animation-name  pulse
  -webkit-animation-duration  2s
  -webkit-animation-iteration-count infinite

a.brand div.disconnected
  vertical-gradient(#FF0000, #CA0000)
  box-shadow 0px 0px 3px #FF0000

.nav-collapse
  font-weight 200
  letter-spacing 1px

.homepage .spiel
  margin-top 120px

.homepage #features
  margin-top 180px
  text-align center

  h2 
    margin-bottom 150px

  h3
    margin-bottom 30px
    min-height 60px

  .featureImage
    width 220px
    height 160px
    background rgba(0,0,0,0.2)
    margin 0 auto
    margin-bottom 40px
    position relative
    border solid 1px #444
    box-shadow 0px 0px 5px black
    overflow hidden
    round(8px)

    img
      overflow hidden

  p
    display block
    font-size 12pt
    font-weight 100
    line-height 1.2em
    letter-spacing 1px
    text-align center

  .feature
    min-height 500px

.app .spiel, .dashboard .spiel, .account
  margin-top 50px

.homepage .spiel

  h1
    text-shadow 0px 2px 2px black
    margin-bottom 70px

  p
    margin 100px 0px 50px
    font-family 'Helvetica Neue'
    font-size 2em
    font-weight 100 !important
    text-shadow 2px 2px 2px black
    color white
    line-height 1.2em
    letter-spacing 1px

.homepage .footer
  margin-top 100px
  font-family 'Helvetica Neue'
  font-size 10pt
  font-weight 100 !important
  line-height 1.2em
  letter-spacing 1px
  padding-bottom 10px  

.btn-try
  vertical-gradient(#61CF2E, #45991F)
  text-shadow 1px 1px 1px rgba(0,0,0,0.5)
  color white
  border solid 1px #357916
  border-radius 20px
  margin-right 10px

.btn-try:hover
  vertical-gradient(#45991F, #61CF2E)
  color white

#demo
  vertical-gradient(#4FABE9, #3086BE)
  border solid 1px #3086BE


// dropdown menu stuff

[class^="icon-"],[class*=" icon-"]
  padding-right 5px

.navbar .dropdown-menu
  background rgba(20,20,20,0.9)
  border none
  margin-top 2px
  border-radius 0px
  round-corner(bottom, left, 6px)
  round-corner(bottom, right, 6px)

.dropdown-menu li a
  color white

.navbar .dropdown-menu::before, .navbar .dropdown-menu::after
  display none

.dropdown-menu .divider
  background-color transparent !important
  border-top none !important
  border-bottom solid 1px rgba(255,255,255,0.5) !important

.dropdown-menu li > a:hover
  color #fff
  text-decoration none
  background rgba(0,0,0,0.2)

#account ul.nav
  margin-right 0px

#brand-container
  margin-left 15px

#snap
  overflow hidden
  box-shadow 0px 0px 40px rgba(0,0,0,1)
  height: 315px

#beta
  -webkit-transform: rotate(-45deg)
  -o-transform: rotate(-45deg)  
  -moz-transform: rotate(-45deg)
  position fixed
  top 5px
  left -45px
  z-index 1031
  display inline-block
  margin 5px
  color black
  font-size 9pt
  font-family 'Helvetica Neue'
  font-weight 600
  text-shadow none
  box-shadow 0px 5px 5px black

#beta-text
  padding 5px 40px
  background #FFE100
  border-left solid 1px black
  border-right solid 1px black

// account settings page

#main .account 
  h1
    margin-bottom 40px
  h2
    margin-bottom 20px

  h2.cancel
    margin-top 40px

  .btn-danger
    vertical-gradient(#CC0000, #990000)